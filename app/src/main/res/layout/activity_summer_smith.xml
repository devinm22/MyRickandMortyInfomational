<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SummerSmithActivity"
    android:background="#64b6d1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:padding="8dp"
        android:text="Summer Smith"
        android:textColor="#59ff3f"
        android:textSize="25dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Age:17"
        android:textSize="25dp"
        android:textColor="#59ff3f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Occupation:Student at Harry Herpson High School"
        android:textSize="25dp"
        android:textColor="#59ff3f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Sister to: Morty Smith, Daughter of: Beth and Jerry Smith, Granddaughter to: Rick Sanchez."
        android:textColor="#59ff3f"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Relationship:None"
        android:textColor="#59ff3f"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Next"
        android:textColor="#59ff3f"
        android:onClick="openBethSmith"/>

</LinearLayout>