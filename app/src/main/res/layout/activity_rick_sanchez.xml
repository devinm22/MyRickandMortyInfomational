<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#64b6d1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".RickSanchezActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:padding="8dp"
        android:text="Rick Sanchez"
        android:textColor="#59ff3f"
        android:textSize="25dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Age:70 "
        android:textSize="25dp"
        android:textColor="#59ff3f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Occupation:Scientist"
        android:textSize="25dp"
        android:textColor="#59ff3f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Children:Beth Smith (Daughter)"
        android:textColor="#59ff3f"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Next"
        android:textColor="#59ff3f"
        android:onClick="openMortySmith"/>

    </LinearLayout>